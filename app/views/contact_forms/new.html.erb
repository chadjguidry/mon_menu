<% provide(:title, 'Contact') %>
<% provide(:page_heading, 'Contact') %>

<div class="container jumbotron">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 text-center">
			<p>
				Please use the contact form below to reach me. I look forward to your comments and suggestions for improving
				Mon Menu.
			</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= render 'layouts/messages' %>
			<%= bootstrap_form_for(@email) do |e| %>
				<%= e.text_field :name %>
				<%= e.email_field :email, label: 'Email Address' %>
				<%= e.text_area :message, size: "10x10" %>
				<%= e.submit 'Send Message', class: "btn btn-large btn-primary" %>
			<% end %>
			<br><br>
			<%= link_to 'Cancel', :back, class: "btn btn-large btn-danger" %>
		</div>
	</div>
</div>