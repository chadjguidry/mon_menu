<% provide(:title, 'Password Reset') %>
<% provide(:page_heading, 'Mon Menu Password Reset') %>

<div class="container jumbotron">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= bootstrap_form_for(resource, as: resource_name, 
					url: password_path(resource_name), html: { method: :put }) do |f| %>
			  <%= f.hidden_field :reset_password_token %>
			  <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
			  <%= f.password_field :password_confirmation, autocomplete: "off" %>
			  <%= f.submit "Change my password", 
			  			class: "btn btn-large btn-success", style: "font-size:14pt" %>
			<% end %>
		</div>
	</div>
</div>