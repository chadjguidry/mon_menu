<% provide(:title, 'Password Recovery') %>
<% provide(:page_heading, 'Password Recovery') %>

<div class="container jumbotron">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 text-center">
			<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>			  
			  <%= f.email_field :email, autofocus: true, placeholder: "Enter your email address" %>
			  <%= f.submit "Initiate Password Recovery", 
			  							class: "btn btn-large btn-success", style: "font-size:14pt" %>
			<% end %>
			<br><br>
			<%= link_to 'Cancel', root_url, class: "btn btn-large btn-danger" %>
		</div>
	</div>
</div>