<% provide(:title, 'Sign Up') %>
<% provide(:page_heading, 'Mon Menu Sign Up') %>

<div class="container jumbotron">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= bootstrap_form_for(resource, as: resource_name, 
				url: registration_path(resource_name)) do |f| %>
			  <%= f.email_field :email, autofocus: true %>
			  <%= f.password_field :password, autocomplete: "off" %>
			  <%= f.password_field :password_confirmation, autocomplete: "off" %>
				<%= f.submit "Sign up", class: "btn btn-large btn-success text-center", style: "font-size:24pt" %>
			<% end %>
			<br>
			<%= link_to 'Cancel', root_url, class: "btn btn-large btn-danger" %>
		</div>
	</div>
</div>
