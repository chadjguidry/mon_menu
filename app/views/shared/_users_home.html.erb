<%= render 'shared/top_nav' %>
<div class="container jumbotron">
	<div class="row">
		<div class="col-md-12 text-center">
			<%= render 'layouts/messages' %>
			<h1>Mon Menu</h1>
		</div>
	</div>
</div>
<div class="container jumbotron">
	<%= link_to 'Add Food', new_food_path, class: "btn btn-large, btn-primary" %>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Food</th>
				<th>Description</th>
				<th>Category</th>
				<th>Photo Name</th>
				<th>Photo Type</th>
			</tr>
		</thead>
		<tbody>
			<% @user.foods.load.each do |food| %>
				<tr>
					<td><%= link_to food.name, food %></td>
					<td><%= food.description %></td>
					<td><%= food.category %></td>
					<% if !food.photo.nil? %>
						<td><%= food.photo.photo_name %></td>
						<td><%= food.photo.photo_type %></td>
					<% end %>
					<td>
						<%= link_to 'edit', edit_food_path(food) %>
					</td>
					<td>
						<%= link_to "delete", food, method: :delete,
	                 data: { confirm: "Action cannot be undone!\nYou sure?" } %>
	        </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>