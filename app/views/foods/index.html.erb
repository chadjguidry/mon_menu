<% provide(:title, 'Foods List') %>
<% provide(:page_heading, 'Foods List') %>

<div class="container jumbotron table-responsive">
	<%= link_to 'Add Food', new_food_path, class: "btn btn-large, btn-primary" %>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Food</th>
				<th>Description</th>
				<th>Category</th>
			</tr>
		</thead>
		<tbody>
			<% @foods.each do |food| %>
				<tr>
					<td><%= link_to food.name, food %></td>
					<td><%= food.description %></td>
					<td><%= food.category %></td>
					<td>
						<%= link_to 'edit', edit_food_path(food) %>
					</td>
					<td>
						<%= link_to "delete", food, method: :delete,
	                 data: { confirm: "Action cannot be undone!\nYou sure?" } %>
	        </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>